generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String     @id @default(cuid())
    role      Role
    status    UserStatus
    name      String
    username  String?    @unique
    password  String
    createdAt DateTime   @default(now()) @map(name: "created_at")
    updatedAt DateTime   @updatedAt @map(name: "updated_at")
    articles  Article[]

    @@map(name: "users")
}

model Article {
    id              String     @id @default(cuid())
    metaTitle       String
    metaDescription String
    title           String
    content         String
    author          User       @relation(fields: [authorId], references: [id])
    authorId        String
    categories      Category[]
}

model Category {
    id       String    @id @default(cuid())
    category String    @unique
    articles Article[]
}

enum Role {
    ADMIN
    USER
}

enum UserStatus {
    AKTIF
    NON_AKTIF
}
